<!-- views/editStudent.ejs -->
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

  <title>Create Student</title>
</head>
<body>
  <h2>Add a New Student</h2>
  <p>
      <a href="/students">View All Student</a>
       &nbsp; || &nbsp; 
      <a href="/student-detail/<%= student._id %>">View This Student</a>
  </p>

  <form action="/student-edit-submit/<%= student._id %>" method="POST">
    <label>Full Name:</label>
    <input type="text" name="fullname" value="<%= student.fullname %>" required><br><br>

    <label>Email:</label>
    <input type="email" name="email"  value="<%= student.email %>"  required><br><br>

    <label>Mobile:</label>
    <input type="text" name="mobile"  value="<%= student.mobile %>" required><br><br>
 
    <button type="submit">Submit</button>
  </form>
</body>
</html>
